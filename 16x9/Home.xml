			</content>

		</control>

		<control type="rss">
			<description>RSS Feed</description>
			<left>0</left>
			<top>1035</top>
			<width>1920</width>
			<height>21</height>
			<font>Small</font>
			<urlset>1</urlset>
			<titlecolor>Red</titlecolor>
			<headlinecolor>White</headlinecolor>
