<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="146">
	<defaultcontrol always="true">9000</defaultcontrol>


	<controls>

		<include>GlobalOverlay</include>

		<control type="group">
			<left>300</left>
			<top>105</top>

			<control type="image">
				<left>-30</left>
				<top>-30</top>
				<width>1380</width>
				<height>915</height>
				<texture border="22">other_textures/ContentPanel.png</texture>
			</control>

			<control type="group">
				<visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>

				<control type="label">
					<description>Header Label</description>
					<left>15</left>
					<align>center</align>
					<font>Medium</font>
					<width>1290</width>
					<label>24003</label>
				</control>

				<control type="image">
					<left>15</left>
					<top>90</top>
					<width>383</width>
					<height>383</height>
					<texture fallback="DefaultAddon.png">$INFO[ListItem.Icon]</texture>
					<aspectratio align="center" aligny="top">keep</aspectratio>
					<bordertexture border="5">other_textures/ButtonFO.png</bordertexture>
					<bordersize>8</bordersize>
				</control>

				<control type="label">
					<description>Addon Title value</description>
					<left>435</left>
					<top>78</top>
					<width>870</width>
					<align>left</align>
					<font>Large</font>
					<label>[B]$INFO[ListItem.Property(Addon.Name)][/B]</label>
					<scroll>true</scroll>
				</control>

				<control type="grouplist">
					<left>435</left>
					<top>141</top>
					<width>870</width>
					<height>210</height>
					<itemgap>0</itemgap>
					<orientation>vertical</orientation>

					<control type="label">
						<description>Type Value</description>
						<width>870</width>
						<height>42</height>
						<label>$INFO[ListItem.Property(Addon.Type),[COLOR blue]$LOCALIZE[146][/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Type))</visible>
					</control>

					<control type="label">
						<description>Author Value</description>
						<width>870</width>
						<height>42</height>
						<label>$INFO[ListItem.Property(Addon.Creator),[COLOR blue]$LOCALIZE[21863]:[/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Creator))</visible>
					</control>

					<control type="label">
						<description>Version Value</description>
						<width>870</width>
						<height>42</height>
						<label>$INFO[ListItem.Property(Addon.Version),[COLOR blue]$LOCALIZE[24051][/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Version))</visible>
					</control>

					<control type="fadelabel">
						<description>Summary Value</description>
						<width>870</width>
						<height>42</height>
						<label>$INFO[ListItem.Property(Addon.Summary),[COLOR blue]$LOCALIZE[20037]:[/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Summary))</visible>
					</control>

					<control type="fadelabel">
						<description>Disclaimer</description>
						<width>870</width>
						<height>42</height>
						<label>$INFO[ListItem.Property(Addon.Disclaimer),[COLOR Red]$LOCALIZE[24052]:[/COLOR] ]</label>
						<scroll>true</scroll>
						<visible>!IsEmpty(ListItem.Property(Addon.Disclaimer))</visible>
					</control>

				</control>

				<control type="textbox" id="400">
					<description>Description</description>
					<left>435</left>
					<top>363</top>
					<width>870</width>
					<height>462</height>
					<align>justify</align>
					<label>$INFO[ListItem.Property(Addon.Description)]</label>
				</control>

				<control type="grouplist" id="9000">
					<left>15</left>
					<top>495</top>
					<width>383</width>
					<height>345</height>
					<itemgap>3</itemgap>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<onright>50</onright>
					<onleft>50</onleft>
					<orientation>vertical</orientation>

					<control type="button" id="6">
						<description>Install/Uninstall Addon button</description>
						<width>383</width>
						<label>24022</label>
					</control>

					<control type="button" id="7">
						<description>Enable/Disable Addon button</description>
						<width>383</width>
						<label>24021</label>	
					</control>

					<control type="button" id="9">
						<description>Addon Settings</description>
						<width>383</width>
						<label>24020</label>
					</control>

					<control type="button" id="8">
						<description>Update Addon button</description>
						<width>383</width>
						<label>24069</label>
					</control>

					<control type="button" id="10">
						<description>Changelog button</description>
						<width>383</width>
						<label>24036</label>
					</control>

				</control>

				<control type="group">
					<visible>!IsEmpty(ListItem.Property(Addon.broken))</visible>
					<left>-30</left>
					<top>882</top>

					<control type="image">
						<description>background image</description>
						<left>0</left>
						<top>0</top>
						<width>1380</width>
						<height>180</height>
						<texture border="22">other_textures/ContentPanel.png</texture>
					</control>

					<control type="image">
						<description>Icon image</description>
						<left>36</left>
						<top>36</top>
						<width>48</width>
						<height>48</height>
						<texture>DefaultIconError.png</texture>
					</control>

					<control type="textbox">
						<description>Reason label</description>
						<left>108</left>
						<top>33</top>
						<width>1200</width>
						<height>75</height>
						<label>$INFO[ListItem.Property(Addon.broken)]</label>
						<align>justify</align>
						<autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
					</control>

				</control>

			</control>

		</control>

	</controls>

</window>
